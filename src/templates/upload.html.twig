{%include 'header.html.twig' %}
<div id="pageContainer">
<h1>{{ pageTitle| default("Brak tytulu podstrony") }}</h1>
{% if user is defined %}
    <div id="UserLogged">Zalogowany uzytkownik: {{ user.getName() }} </div>
    {% endif %}
<form action="" method="post" enctype="multipart/form-data">
    <label for="titleInput">Tytul obrazka:</label>
    <input type="text" name="title" id="titleInput"><br>
    <label for="uploadedFileInput">
        Wybierz plik do wgrania na serwer:
    </label>
    {% if user is defined %}
    <input type="hidden" name="userId" value="{{ user.getId() }}">
    {% endif %}
   <input type="file" name="uploadedFile" id="uploadedFileInput" required>
   <input type="submit" value="Wyslij plik" name="submit">
</form>
</div>
{%include 'footer.html.twig' %}